# Required
VAULT_DIR=/absolute/path/to/your/ObsidianVault

# Optional output override
# FINDINGS_DIR=/absolute/path/to/your/ObsidianVault/Inbox/Findings

# Optional behavior tuning
MAX_TASKS=5
MAX_SOURCES_PER_TASK=3
MAX_RETRIES=4
RETRY_BASE_MINUTES=5
RATE_LIMIT_MS=1500
LOOP_INTERVAL_MINUTES=60
# LOOP_MAX_CYCLES=8
LOCK_STALE_MINUTES=180
# LOOP_LOCK_FILE=/absolute/path/to/your/ObsidianVault/.signalforge/loop.lock
# Optional custom state path
# STATE_FILE=/absolute/path/to/your/ObsidianVault/.signalforge/state.json

# Cerebras (LLM-powered summarization - free API key at cerebras.ai)
CEREBRAS_API_KEY=
# CEREBRAS_MODEL=gpt-oss-120b

# Browserbase (required for full browser research)
BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=
