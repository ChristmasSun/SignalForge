{
  "name": "signalforge",
  "version": "0.1.0",
  "main": "src/cli.ts",
  "scripts": {
    "start": "bun run src/cli.ts",
    "run": "bun run src/cli.ts run",
    "dry": "bun run src/cli.ts run --dry-run",
    "init": "bun run src/cli.ts init",
    "status": "bun run src/cli.ts status",
    "rerun": "bun run src/cli.ts rerun",
    "replay": "bun run src/cli.ts replay",
    "purge": "bun run src/cli.ts purge",
    "loop": "bun run src/cli.ts loop",
    "loop:daemon": "bun run src/cli.ts loop --daemon",
    "loop:stop": "bun run src/cli.ts stop-loop",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "obsidian",
    "browserbase",
    "automation",
    "market-intelligence",
    "research"
  ],
  "author": "Vedan",
  "license": "MIT",
  "description": "Turn Obsidian research intents into autonomous, evidence-backed findings using Browserbase.",
  "type": "module",
  "dependencies": {
    "@browserbasehq/sdk": "^2.6.0",
    "@cerebras/cerebras_cloud_sdk": "^1.64.1",
    "fast-glob": "^3.3.3",
    "playwright-core": "^1.58.2"
  },
  "devDependencies": {
    "@types/node": "^24.4.0",
    "typescript": "^5.9.2"
  },
  "homepage": "https://github.com/vedan/SignalForge#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vedan/SignalForge.git"
  },
  "bugs": {
    "url": "https://github.com/vedan/SignalForge/issues"
  },
  "bin": {
    "signalforge": "src/cli.ts"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "bun": ">=1.3.0"
  }
}
